@model ContactsModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}
<div class="text-center">
    <h3>Deseja Realmente apagar o contato (@Model.Name)</h3>
</div>
<a class="btn btn-danger w-100 m-1" asp-controller="Contacts" asp-route-id="@Model.Id" asp-action="Delete">Apagar</a>
<a class="btn btn-primary w-100 m-1" asp-controller="Contacts" asp-action="Index">Voltar</a>

