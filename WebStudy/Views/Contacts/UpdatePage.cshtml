@model ContactsModel;
@{
    ViewData["Title"] = "Edição de contato";
}

<div class="text-center">
    <h1 class="display-4">
        Edição de contato
    </h1>
</div>
<form asp-controller="Contacts" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputPassword1">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label class="form-check-label" for="exampleCheck1">Telefone</label>
        <input type="text" asp-for="Phone" class="form-control" id="exampleCheck1">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <button type="submit" class="btn btn-primary w-100 m-1" >Confiramr edição</button>
    <a class="btn btn-secondary w-100 m-1" asp-controller="Contacts" asp-action="Index" role="button">Voltar</a>
</form>
